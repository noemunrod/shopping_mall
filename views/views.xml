<?xml version="1.0"?>
<odoo>

  <!-- Product Form View -->
  <record id="product_view_form" model="ir.ui.view">
    <field name="name">product.view.form</field>
    <field name="model">shopping_mall.product</field>
    <field name="arch" type="xml">
      <form string="">
        <sheet>
          <group>
            <field name="name" />
            <field name="description" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Product Tree View -->
  <record id="product_view_tree" model="ir.ui.view">
    <field name="name">product.tree</field>
    <field name="model">shopping_mall.product</field>
    <field name="arch" type="xml">
      <tree string="Products" default_order="price_ids asc">
        <field name="name" />
        <field name="description" />
        <field name="price_ids" />
        <field name="stock_id" />
        <field name="lot_ids" />
        <field name="cart_products_ids" />

      </tree>
    </field>
  </record>

  <!-- Product Form Action -->
  <record id="product_action" model="ir.actions.act_window">
    <field name="name">Products</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">shopping_mall.product</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
      <p class="oe_view_nocontent_create">
        Register here your products. Customers can buy added products in their carts.
      </p>
    </field>
  </record>

  <!-- Customer Form view -->
  <record id="view_customer_form" model="ir.ui.view">
    <field name="name">customer.form</field>
    <field name="model">shopping_mall.customer</field>
    <field name="arch" type="xml">
      <form string="Customer">
        <sheet>
          <group>
            <field name="name" />
            <field name="surname" />
            <field name="birth_date" />
            <field name="email" />
            <field name="dir_line_1" />
            <field name="dir_line_2" />
            <field name="post_code" />
            <field name="country_id" />
            <field name="guardian_external_uid" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Customer Tree View -->
  <record
    id="view_customer_tree" model="ir.ui.view">
    <field name="name">customer.tree</field>
    <field name="model">shopping_mall.customer</field>
    <field name="arch" type="xml">
      <tree string="Customer">
        <field name="name" />
        <field name="surname" />
        <field name="birth_date" />
        <field name="email" />
        <field name="dir_line_1" />
        <field name="dir_line_2" />
        <field name="post_code" />
        <field name="country_id" />
        <field name="guardian_external_uid" />
        <field name="credit_limit_amount" />
        <field name="money_spent" />
        <field name="carts_ids" />
        <field name="is_adult" />
      </tree>
    </field>
  </record>

  <!-- Customer Form Action -->
  <record id="customer_action"
    model="ir.actions.act_window">
    <field name="name">Customers</field>
    <field name="res_model">shopping_mall.customer</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
      <p class="oe_view_nocontent_create">
        Register here your costumers.
      </p>
    </field>
  </record>

  <!-- MainMenu -->
  <menuitem id="shopping_mall_menu"
    name="Shopping Mall" sequence="10" />

  <!-- Product Menu -->
  <menuitem
    id="product_menu"
    name="Products"
    parent="shopping_mall_menu"
    action="product_action" />


  <!-- Customer Menu -->
  <menuitem
    id="customer_menu"
    name="Customers"
    parent="shopping_mall_menu"
    action="customer_action" />
</odoo>